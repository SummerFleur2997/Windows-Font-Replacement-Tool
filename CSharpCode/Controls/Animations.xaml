<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 标签页动画 -->
    <Style TargetType="Grid">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform X="0" Y="20"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Visibility" Value="Visible">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1"
                                Duration="0:0:0.3"/>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.Y"
                                From="32" To="0"
                                Duration="0:0:0.3"
                                AccelerationRatio="0.2"
                                DecelerationRatio="0.6"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 垂直容器动画 -->
    <Style x:Key="StackPanelFadeIn" TargetType="StackPanel">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform X="0" Y="20"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Visibility" Value="Visible">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1"
                                Duration="0:0:0.4"/>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.Y"
                                From="32" To="-8"
                                Duration="0:0:0.4"
                                AccelerationRatio="0.3"
                                DecelerationRatio="0.2"/>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.Y"
                                From="-8" To="0"
                                BeginTime="0:0:0.4"
                                Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 水平容器动画 -->
    <Style x:Key="DockPanelFadeIn" TargetType="DockPanel">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform X="20" Y="0"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Visibility" Value="Visible">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1"
                                Duration="0:0:0.4"/>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.X"
                                From="32" To="-8"
                                Duration="0:0:0.4"
                                AccelerationRatio="0.3"
                                DecelerationRatio="0.2"/>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.X"
                                From="-8" To="0"
                                BeginTime="0:0:0.4"
                                Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 锤子动画 -->
    <Style x:Key="AnimatedHammerStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="../Assets/#iconfont"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="RenderTransformOrigin" Value="0.2 0.8"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <RotateTransform x:Name="HammerRotation" Angle="0"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsVisible" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.Angle"
                                From="0" To="40"
                                BeginTime="0:0:0.7" Duration="0:0:0.2"
                                AccelerationRatio="0.2" DecelerationRatio="0.05"/>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.Angle"
                                From="40" To="-5"
                                BeginTime="0:0:0.9" Duration="0:0:0.4"
                                AccelerationRatio="0.5" DecelerationRatio="0.5"/>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.Angle"
                                From="-5" To="0"
                                BeginTime="0:0:1.3" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>