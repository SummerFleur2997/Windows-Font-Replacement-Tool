<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Class="Windows_Font_Replacement_Tool.Controls.CustomTaskRow"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" d:DesignWidth="500">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.08*"/>
        <ColumnDefinition Width="0.46*"/>
        <ColumnDefinition Width="0.46*"/>
    </Grid.ColumnDefinitions>

        <Grid Column="0">
            <Border
                VerticalAlignment="Top" Height="30"
                BorderThickness="0.8" BorderBrush="{StaticResource AltTextBrush}"
                Background="{StaticResource MainBrush}"
                CornerRadius="4" Margin="2 2 2 0">
                <TextBlock
                    x:Name="Index"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Foreground="{StaticResource TextBrush}"
                    Text="1" FontSize="12" Margin="0 0 10 0"/>
            </Border>
        </Grid>

        <Grid Column="1">
            <Border
                VerticalAlignment="Top" Height="30"
                BorderThickness="0.8" BorderBrush="{StaticResource AltTextBrush}"
                Background="{StaticResource MainBrush}"
                CornerRadius="4" Margin="0 2 2 0">
                <Button
                    x:Name="FontToReplace" Style="{StaticResource BorderlessButton}"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Click="OnFontSelectButtonClick"
                    Content="（点击选择待替换字体）" FontSize="12" Margin="10 0 0 0"/>
            </Border>
        </Grid>

        <Grid Column="2">
            <Border
                VerticalAlignment="Top" Height="30"
                BorderThickness="0.8" BorderBrush="{StaticResource AltTextBrush}"
                Background="{StaticResource MainBrush}"
                CornerRadius="4" Margin="0 2 2 0">
                <Button
                    x:Name="FontOfCustom" Style="{StaticResource BorderlessButton}"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Click="OnFontSelectButtonClick"
                    Content="（点击选择个性化字体）" FontSize="12" Margin="10 0 0 0"/>
            </Border>
        </Grid>
</Grid>
