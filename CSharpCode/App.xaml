<Application x:Class="Windows_Font_Replacement_Tool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Windows_Font_Replacement_Tool"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#7c4ca9</Color>
            <Color x:Key="SurfaceColor">#D3BFDE</Color>
            <Color x:Key="HoverColor">#EDE4F1</Color>
            <Color x:Key="MainColor">#FEF7FF</Color>
            <Color x:Key="OnSurfaceColor">#1D1B20</Color>
            <Color x:Key="TextColor">#56428F</Color>
            <Color x:Key="AltTextColor">#9B65B3</Color>
            <Color x:Key="CommentColor">#8D869E</Color>
            
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
            <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
            <SolidColorBrush x:Key="MainBrush" Color="{StaticResource MainColor}"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurfaceColor}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
            <SolidColorBrush x:Key="AltTextBrush" Color="{StaticResource AltTextColor}"/>
            <SolidColorBrush x:Key="CommentBrush" Color="{StaticResource CommentColor}"/>
            
            <!-- 关闭按钮 -->
            <Style x:Key="CloseButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#ff5a5a"/>
                                    <Setter TargetName="border" 
                                            Property="BorderBrush" 
                                            Value="#ff5a5a"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 最小化按钮 -->
            <Style x:Key="MinimizeButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#7faaaaaa"/>
                                    <Setter TargetName="border" 
                                            Property="BorderBrush" 
                                            Value="#7faaaaaa"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 欢迎页面按钮 -->
            <Style x:Key="WelcomePageButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource MainBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource TextBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont, Microsoft YaHei UI"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Width" Value="160"/>
                <Setter Property="Margin" Value="32 0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="Border"
                                Background="{StaticResource MainBrush}"
                                BorderBrush="{StaticResource TextBrush}"
                                BorderThickness="1.6" 
                                CornerRadius="15">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="Scale" ScaleX="1" ScaleY="1" 
                                                        CenterX="80" CenterY="80"/>
                                        <TranslateTransform x:Name="Translate" Y="0"/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.3">
                                                <ColorAnimation
                                                    Storyboard.TargetName="Border" 
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="{StaticResource HoverColor}" Duration="0:0:0.3"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleX"
                                                    To="1.05" Duration="0:0:0.2" 
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleY"
                                                    To="1.05" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Translate" Storyboard.TargetProperty="Y"
                                                    To="-5" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.3">
                                                <ColorAnimation
                                                    Storyboard.TargetName="Border" 
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="{StaticResource MainColor}" Duration="0:0:0.3"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleX"
                                                    To="1" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleY"
                                                    To="1" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Translate" 
                                                    Storyboard.TargetProperty="Y"
                                                    To="0" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 普通按钮 -->
            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource MainBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource TextBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont, Microsoft YaHei UI"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="Border"
                                Background="{StaticResource MainBrush}"
                                BorderBrush="{StaticResource TextBrush}"
                                BorderThickness="1" 
                                CornerRadius="4">
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.2">
                                                <ColorAnimation
                                                    Storyboard.TargetName="Border" 
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="{StaticResource HoverColor}" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.2">
                                                <ColorAnimation
                                                    Storyboard.TargetName="Border" 
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="{StaticResource MainColor}" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style> 
            
            <!-- 填充按钮 -->
            <Style x:Key="ColoredButton" TargetType="Button">
                <Setter Property="Foreground" Value="{StaticResource MainBrush}"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont, Microsoft YaHei UI"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="Border"
                                BorderThickness="0" 
                                CornerRadius="4">
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="Scale" ScaleX="1" ScaleY="1" 
                                                        CenterX="48" CenterY="18"/>
                                        <TranslateTransform x:Name="Translate" Y="0"/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                                        <GradientStop Color="#533eb1" Offset="0"/>
                                        <GradientStop Color="#a54acf" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.2">
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleX"
                                                    To="1.05" Duration="0:0:0.2" 
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleY"
                                                    To="1.05" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Translate" Storyboard.TargetProperty="Y"
                                                    To="-1.8" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.3">
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleX"
                                                    To="1" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Scale" 
                                                    Storyboard.TargetProperty="ScaleY"
                                                    To="1" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="Translate" 
                                                    Storyboard.TargetProperty="Y"
                                                    To="0" Duration="0:0:0.2"
                                                    AccelerationRatio="0.2" DecelerationRatio="0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Border" Property="Background" Value="Gray" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style> 
            
            <!-- 无边框按钮 -->
            <Style x:Key="BorderlessButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont, Microsoft YaHei UI"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="Border"
                                Background="Transparent"
                                BorderBrush="Transparent">
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.2">
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="Foreground.Color"
                                                    To="{StaticResource AltTextColor}"
                                                    Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.2">
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="Foreground.Color"
                                                    To="{StaticResource TextColor}"
                                                    Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="Visibility" Value="Visible">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="0" To="1"
                                                    Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 导航栏按钮 -->
            <Style x:Key="MyRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont, Microsoft YaHei UI"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="RootBorder" 
                                    Background="Transparent"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Border x:Name="SelectionIndicator" 
                                            Width="5" Height="30"
                                            HorizontalAlignment="Left"
                                            Background="Transparent"/>
                                    <ContentPresenter 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="16,0,0,0"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter 
                                        TargetName="SelectionIndicator" 
                                        Property="Background" 
                                        Value="{StaticResource PrimaryBrush}"/>
                                    <Setter 
                                        Property="Foreground" 
                                        Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter Property="Foreground"
                                            Value="{StaticResource OnSurfaceBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.2">
                                                <ColorAnimation
                                                    Storyboard.TargetName="RootBorder" 
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="#1A6750A4" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard Duration="0:0:0.2">
                                                <ColorAnimation
                                                    Storyboard.TargetName="RootBorder" 
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="Transparent" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 标签页动画 -->
            <Style TargetType="Grid">
                <Setter Property="Opacity" Value="0"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform X="0" Y="20"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        From="0" To="1"
                                        Duration="0:0:0.3"/>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.Y"
                                        From="32" To="0"
                                        Duration="0:0:0.3"
                                        AccelerationRatio="0.2"
                                        DecelerationRatio="0.6"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- 垂直容器动画 -->
            <Style x:Key="StackPanelFadeIn" TargetType="StackPanel">
                <Setter Property="Opacity" Value="0"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform X="0" Y="20"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        From="0" To="1"
                                        Duration="0:0:0.4"/>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.Y"
                                        From="32" To="-8"
                                        Duration="0:0:0.4"
                                        AccelerationRatio="0.3"
                                        DecelerationRatio="0.2"/>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.Y"
                                        From="-8" To="0"
                                        BeginTime="0:0:0.4"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- 水平容器动画 -->
            <Style x:Key="DockPanelFadeIn" TargetType="DockPanel">
                <Setter Property="Opacity" Value="0"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform X="20" Y="0"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        From="0" To="1"
                                        Duration="0:0:0.4"/>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.X"
                                        From="32" To="-8"
                                        Duration="0:0:0.4"
                                        AccelerationRatio="0.3"
                                        DecelerationRatio="0.2"/>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.X"
                                        From="-8" To="0"
                                        BeginTime="0:0:0.4"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- 锤子动画 -->
            <Style x:Key="AnimatedHammerStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="Resources/#iconfont"/>
                <Setter Property="FontSize" Value="48"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="RenderTransformOrigin" Value="0.2 0.8"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <RotateTransform x:Name="HammerRotation" Angle="0"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsVisible" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.Angle"
                                        From="0" To="40"
                                        BeginTime="0:0:0.7" Duration="0:0:0.2"
                                        AccelerationRatio="0.2" DecelerationRatio="0.05"/>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.Angle"
                                        From="40" To="-5"
                                        BeginTime="0:0:0.9" Duration="0:0:0.4"
                                        AccelerationRatio="0.5" DecelerationRatio="0.5"/>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.Angle"
                                        From="-5" To="0"
                                        BeginTime="0:0:1.3" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- 提示框样式 -->
            <Style TargetType="ToolTip">
                <Setter Property="Background" Value="{StaticResource MainBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource AltTextBrush}"/>
                <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Placement" Value="Bottom"/>
                <Setter Property="VerticalOffset" Value="8"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToolTip">
                            <Border 
                                x:Name="Border"
                                Background="{StaticResource MainBrush}"
                                BorderBrush="{StaticResource AltTextBrush}"
                                BorderThickness="1.5" CornerRadius="3">
                                <ContentPresenter 
                                    Margin="5"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="3" ShadowDepth="0" Direction="-90"
                                                      Color="{StaticResource CommentColor}"/>
                                </Border.Effect>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style> 
            
            <!-- 通过标签 -->
            <Style x:Key="VerifiedIcon" TargetType="TextBlock">
                <Setter Property="Text" Value="&#xE6F3;"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="SpringGreen"/>
                <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
            </Style>
            
            <!-- 缺少文件标签 -->
            <Style x:Key="OmitIcon" TargetType="TextBlock">
                <Setter Property="Text" Value="&#xE6AF;"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="Orange"/>
                <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
                <Setter Property="ToolTip">
                    <Setter.Value>
                        <ToolTip>
                            <TextBlock Text="未能找到字体文件，该文件路径可能不正确。"/>
                        </ToolTip>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 提示标签 -->
            <Style x:Key="WarningIcon" TargetType="TextBlock">
                <Setter Property="Text" Value="&#xE65D;"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="Gold"/>
                <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
            </Style>
            
            <!-- 错误标签 -->
            <Style x:Key="ErrorIcon" TargetType="TextBlock">
                <Setter Property="Text" Value="&#xE65D;"/>
                <Setter Property="FontFamily" Value="Resources/#iconfont"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="Red"/>
                <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
                <Setter Property="ToolTip">
                    <Setter.Value>
                        <ToolTip>
                            <TextBlock Text="该字体文件不合法！" MaxWidth="200" TextWrapping="Wrap"/>
                        </ToolTip>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 滚动内容块 -->
            <Style x:Key="MyScrollViewer" TargetType="ScrollViewer">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Grid>
                                <Border Grid.Column="0" Margin="0 0 0 0">
                                    <ScrollContentPresenter HorizontalAlignment="Stretch"
                                        CanContentScroll="{TemplateBinding CanContentScroll}"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style x:Key="Preview1" TargetType="Label">
                <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}"/>
                <Setter Property="FontFamily" Value="Segoe UI, Microsoft YaHei UI"/>
                <Setter Property="Margin" Value="8 -8 0 0"></Setter>
                <Setter Property="Content" Value="落霞与孤鹜齐飞，秋水共长天一色。 0123456789"/>
            </Style>
            <Style x:Key="Preview2" TargetType="Label">
                <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}"/>
