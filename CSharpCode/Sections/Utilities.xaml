<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Windows_Font_Replacement_Tool.Controls"
      x:Class="Windows_Font_Replacement_Tool.Sections.Utilities"
      Margin="20">
    <ScrollViewer VerticalAlignment="Stretch"
                  Style="{StaticResource MyScrollViewer}">
        <StackPanel>
            <controls:CollapsableCard
                Icon="&#xE64e;" Title="格式转换" ExtraHeight="200">
            </controls:CollapsableCard>
            <controls:CollapsableCard
                Icon="&#xE641;" Title="自定义替换" ExtraHeight="100">
            </controls:CollapsableCard>
            <controls:CollapsableCard
                Icon="&#xE63d;" Title="TTC 拆分与合并" ExtraHeight="100">
            </controls:CollapsableCard>
        </StackPanel>
    </ScrollViewer>
</Grid>
