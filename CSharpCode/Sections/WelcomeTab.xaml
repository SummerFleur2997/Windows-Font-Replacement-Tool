<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Class="Windows_Font_Replacement_Tool.Sections.WelcomeTab">
    <Border Background="{StaticResource MainBrush}"
            CornerRadius="6"
            Margin="16">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="0"
                              Direction="270" Color="#90cdb9df"/>
        </Border.Effect>
    </Border>
    <StackPanel Width="360" Margin="0 16">
        <Label VerticalAlignment="Top" HorizontalAlignment="Center"
               Foreground="{StaticResource TextBrush}"
               FontSize="22" FontWeight="Bold"
               Content="欢迎使用本工具！"
               Margin="0 66 0 0"/>
        <Label VerticalAlignment="Top" HorizontalAlignment="Center"
               Foreground="{StaticResource CommentBrush}"
               Content="请选择您的 DIY 模式：" Margin="0 10 0 0"/>
    </StackPanel>
    <DockPanel Height="160" Margin="16 0"
               HorizontalAlignment="Center">
        <Button Name="ButtonS" Style="{StaticResource WelcomePageButton}"
                Click="AltTabButton_Click">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="&#xE63C;" FontSize="56" Margin="0 -10 0 0"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="快速制作" Margin="0 16 0 0"/>
            </StackPanel>
        </Button>
        <Button Name="ButtonM" Style="{StaticResource WelcomePageButton}"
                Click="AltTabButton_Click">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="&#xE647;" FontSize="56" Margin="0 -10 0 0"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="精细制作" Margin="0 16 0 0"/>
            </StackPanel>
        </Button>
    </DockPanel>
    <Button Style="{StaticResource BorderlessButton}"
            VerticalAlignment="Bottom" Margin="0 0 0 20"
            FontSize="12" Width="167">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="© 2025 SummerFleur2997" Margin="0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="&#xE681;" FontSize="18" Margin="5 0 0 0"/>
        </StackPanel>
    </Button>
</Grid>