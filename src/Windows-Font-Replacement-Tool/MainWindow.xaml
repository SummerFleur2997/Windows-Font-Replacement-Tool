<Window x:Class="Windows_Font_Replacement_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sections="clr-namespace:Windows_Font_Replacement_Tool.Sections"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="576" Width="896">

    <Window.Resources>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Border 
                CornerRadius="10 10 0 0" 
                BorderThickness="0"
                MouseDown="Border_MouseDown" >
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7147a9" Offset="0"/>
                        <GradientStop Color="#a350c9" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="字体属性替换工具" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0" 
                           FontSize="17" Foreground="White"></TextBlock>
            </Border>
            
            <Button Height="28" Width="28" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 12 0"
                    Content="&#xE6EA;" FontSize="18" Foreground="White"
                    Click="ExitButton_Click" Style="{StaticResource CloseButtonStyle}"/>
                
            <Button Height="28" Width="28" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 48 0"
                    Content="&#xE687;" FontSize="18" Foreground="White"
                    Click="MinimizeButton_Click" Style="{StaticResource MinimizeButtonStyle}"/>
        </Grid>
        
        <Grid Grid.Row="1" ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="735"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="2" 
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="0 0 10 0"
                    BorderThickness="0 "
                    Margin="-1 0 0 0">
                <Grid>
                    <!-- 主页详细内容 -->
                    <sections:WelcomeTab
                        x:Name="WelcomeContent" Visibility="Collapsed"
                        Style="{StaticResource GridFadeIn}"/>
                    <!-- 快速制作页详细内容 -->
                    <sections:SingleRepTab
                        x:Name="Tab1Content" Visibility="Collapsed"
                        Style="{StaticResource GridFadeIn}"/>
                    <!-- 精细制作页详细内容 -->
                    <sections:MultipleRepTab
                        x:Name="Tab2Content" Visibility="Collapsed"
                        Style="{StaticResource GridFadeIn}"/>
                    <!-- 实用工具页详细内容 -->
                    <sections:Utilities
                        x:Name="Tab3Content" Visibility="Visible"
                        Style="{StaticResource GridFadeIn}"/>
                </Grid>
            </Border>
            
            <!-- 用于实现阴影的细长条 -->
            <Border Grid.Column="1"
                    Background="{StaticResource MainBrush}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Direction="90"
                                      Color="#7c4ca9"/>
                </Border.Effect>
            </Border>
            
            <!-- 左侧的功能栏 -->
            <Border Grid.Column="0"
                    Background="{StaticResource MainBrush}"
                    CornerRadius="0 0 0 10"
                    BorderThickness="0 0">
                <Grid>
                    <StackPanel Margin="0 8 0 0" VerticalAlignment="Top">
                        <!-- 主页按钮 -->
                        <RadioButton x:Name="WelcomeTab" GroupName="MainTabs"
                                     Style="{StaticResource TabRadioButtonStyle}"
                                     Height="48" IsChecked="True" Checked="TabButton_Checked">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE617;" FontSize="18" Margin="2 0 0 0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="主页" Margin="8 0 0 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- 快速制作按钮 -->
                        <RadioButton x:Name="Tab1Button" GroupName="MainTabs"
                                     Style="{StaticResource TabRadioButtonStyle}"
                                     Height="48" Checked="TabButton_Checked">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE63C;" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="快速制作" Margin="8 0 0 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- 精细制作按钮 -->
                        <RadioButton x:Name="Tab2Button" GroupName="MainTabs"
                                     Style="{StaticResource TabRadioButtonStyle}"
                                     Height="48" Checked="TabButton_Checked">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE647;" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="精细制作" Margin="8 0 0 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- 实用工具按钮 -->
                        <RadioButton x:Name="Tab3Button" GroupName="MainTabs"
                                     Style="{StaticResource TabRadioButtonStyle}"
                                     Height="48" Checked="TabButton_Checked">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE75F;" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="实用工具" Margin="8 0 0 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                    <StackPanel Margin="0 0 0 20" VerticalAlignment="Bottom">
                        <!-- 精细制作按钮 -->
                        <RadioButton x:Name="Tab4Button" GroupName="MainTabs"
                                     Style="{StaticResource TabRadioButtonStyle}"
                                     Height="48" Checked="TabButton_Checked">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE649;" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="帮助文档" Margin="8 0 0 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- 实用工具按钮 -->
                        <RadioButton x:Name="Tab5Button" GroupName="MainTabs"
                                     Style="{StaticResource TabRadioButtonStyle}"
                                     Height="48" Checked="TabButton_Checked">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE646;" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="设置" Margin="8 0 0 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
