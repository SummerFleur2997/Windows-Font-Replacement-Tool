<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Class="Windows_Font_Replacement_Tool.Sections.MultipleRepTab">

    <Grid Grid.Row="0">
        <Border Background="{StaticResource MainBrush}"
                CornerRadius="6" Margin="27 27 27 24">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0"
                                  Direction="270" Color="#90cdb9df"/>
            </Border.Effect>
        </Border>
        <StackPanel Margin="38 38 0 21" Width="400" HorizontalAlignment="Left">
            <Label Foreground="{StaticResource TextBrush}"
                   FontSize="14" Content="精细制作字体："/>
            <TextBlock Foreground="{StaticResource CommentBrush}"
                       Margin="10 8 0 0" HorizontalAlignment="Left"
                       Width="345" TextWrapping="Wrap" TextAlignment="Left"
                       LineHeight="19">
                为每一种变体字体（粗体字、斜体字）选择它们对应的个性
                &#x0a;化字体进行制作。若选用合适的字体系列，能够制作出包含所有
                &#x0a;变体字样式的个性化字体，但也需要相对更繁琐的操作。
            </TextBlock>
        </StackPanel>
        <StackPanel Margin="0 32 58 21" Width="220"
                    HorizontalAlignment="Right" VerticalAlignment="Top">
            <DockPanel Margin="0 48 0 0" HorizontalAlignment="Center">
                <Button Name="MakePreview" Width="96" Height="36" Margin="6 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE64A;" FontSize="19" VerticalAlignment="Center"/>
                        <TextBlock Text="构建预览" FontSize="14"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Name="Run" Width="96" Height="36" Margin="6 0" IsEnabled="False"
                        Style="{StaticResource ColoredButton}"
                        Click="MultipleFileRunButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE653;" FontSize="19" VerticalAlignment="Center"/>
                        <TextBlock Text="开始制作" FontSize="14"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </StackPanel>
        <DockPanel Margin="27 161 27 27" HorizontalAlignment="Left">
            <StackPanel Width="216" Margin="10 0 5 0">
                <DockPanel Margin="60 0 0 12" HorizontalAlignment="Left">
                    <TextBlock Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" FontSize="14" Text="西文正体"/>
                </DockPanel>
                <DockPanel Margin="20 0 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="常规字体"/>
                    <Button Name="RgRm" Tag="6" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="RgRmS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="20 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="细体字体"/>
                    <Button Name="LtRm" Tag="7" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="LtRmS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="20 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="半细字体"/>
                    <Button Name="SlRm" Tag="8" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="SlRmS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="20 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="半粗字体"/>
                    <Button Name="SbRm" Tag="9" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="SbRmS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="20 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="粗体字体"/>
                    <Button Name="BdRm" Tag="10" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="BdRmS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="20 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="特粗字体"/>
                    <Button Name="HvRm" Tag="11" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="HvRmS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
            </StackPanel>
            <StackPanel Width="216">
                <DockPanel Margin="45 0 0 12" HorizontalAlignment="Left">
                    <TextBlock Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" FontSize="14" Text="西文斜体"/>
                </DockPanel>
                <DockPanel Margin="5 0 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="斜体字体"/>
                    <Button Name="RgIt" Tag="12" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="RgItS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="细体斜体"/>
                    <Button Name="LtIt" Tag="13" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="LtItS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="半细斜体"/>
                    <Button Name="SlIt" Tag="14" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="SlItS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="半粗斜体"/>
                    <Button Name="SbIt" Tag="15" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="SbItS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="粗体斜体"/>
                    <Button Name="BdIt" Tag="16" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="BdItS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="特粗斜体"/>
                    <Button Name="HvIt" Tag="17" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="HvItS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
            </StackPanel>
            <StackPanel Width="216">
                <DockPanel Margin="45 0 0 12" HorizontalAlignment="Left">
                    <TextBlock Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" FontSize="14" Text="中文字体"/>
                </DockPanel>
                <DockPanel Margin="5 0 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="常规字体"/>
                    <Button Name="ZhRg" Tag="0,1" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="ZhRgS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="细体字体"/>
                    <Button Name="ZhLt" Tag="2,3" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="ZhLtS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="粗体字体"/>
                    <Button Name="ZhBd" Tag="4,5" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="ZhBdS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
                <DockPanel Margin="5 10 0 0"
                           HorizontalAlignment="Left">
                    <Label Foreground="{StaticResource TextBrush}"
                           FontSize="14" Content="可变字体"/>
                    <Button Name="Vary" Tag="18" Width="64" Click="MultipleFileOpenButton_Click"
                            Margin="4  0 0 0" Content="选择字体"/>
                    <TextBlock Name="VaryS" Visibility="Collapsed"
                               Style="{StaticResource VerifiedIcon}"
                               Margin="8  0 0 0" Width="16"/>
                </DockPanel>
            </StackPanel>
        </DockPanel>
        <DockPanel Name="ProcessingPanel" Margin="0 0 80 64"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Width="180" Height="90" Visibility="Collapsed">
            <Label Style="{StaticResource AnimatedHammerStyle}"
                   Content="&#xE70B;" VerticalAlignment="Center"/>
            <Label Foreground="{StaticResource TextBrush}"
                   VerticalAlignment="Center" Width="100" FontSize="16"
                   Content="制作中……"/>
        </DockPanel>
        <DockPanel Name="FinishPanel" Margin="0 0 80 64"
                   Style="{StaticResource DockPanelFadeIn}"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Width="180" Height="90" Visibility="Collapsed">
            <Label VerticalAlignment="Center" FontFamily="../Resources/#iconfont"
                   FontSize="64" Foreground="{StaticResource TextBrush}"
                   Content="&#xE63e;"/>
            <Label Foreground="{StaticResource TextBrush}"
                   VerticalAlignment="Center" Width="100" FontSize="16"
                   Content="制作完成"/>
        </DockPanel>
        <Button Name="OutDirButton" Style="{StaticResource BorderlessButton}"
                VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Visibility="Collapsed" Margin="0 0 50 48"
                Tag="Multiple">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE701;" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="打开导出目录" FontSize="13"
                           Margin="4,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Grid>